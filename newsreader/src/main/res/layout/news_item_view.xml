<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:masaccio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <it.subito.masaccio.MasaccioImageView
        android:id="@+id/news_image"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:scaleType="centerCrop"
        masaccio:activate_matrix="ifNoFace"
        masaccio:center_face="true"
        masaccio:translate_y="0.25" />

    <ImageView
        android:id="@+id/favorite_indicator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:src="@drawable/ic_favorite_outline_grey" />

    <View
        android:id="@+id/news_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:padding="8dp"
        android:paddingBottom="0dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pub_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="0dp"
        android:textColor="@color/primary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="0dp"
        android:maxLines="6"
        android:padding="8dp"
        android:paddingTop="0dp"
        android:shadowRadius="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/primary_text"
        android:textSize="14sp"
        android:visibility="gone" />
</merge>